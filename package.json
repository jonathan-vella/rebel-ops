{
  "name": "rebel-ops",
  "version": "1.2.0",
  "description": "Rebel Alliance Death Star Reconnaissance Platform - Azure infrastructure engineered by AI agents",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cd demo-app && npm run dev",
    "build": "cd demo-app && npm run build",
    "preview": "cd demo-app && npm run preview",
    "api:start": "cd api && npm start",
    "lint": "npm run lint --workspaces",
    "lint:artifact-templates": "node scripts/validate-artifact-templates.mjs",
    "install:all": "npm install && cd demo-app && npm install && cd ../api && npm install"
  },
  "workspaces": [
    "demo-app",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jonathan-vella/rebel-ops.git"
  },
  "keywords": [
    "azure",
    "static-web-apps",
    "azure-functions",
    "bicep",
    "infrastructure-as-code",
    "agentic-workflow",
    "github-copilot",
    "react",
    "threejs",
    "star-wars"
  ],
  "author": "Rebel Alliance Engineering Corps",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.3.1",
    "commitlint": "^20.3.1"
  }
}
