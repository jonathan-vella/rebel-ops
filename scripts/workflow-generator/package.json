{
  "name": "workflow-generator",
  "version": "1.0.0",
  "description": "Generate animated workflow diagrams from Mermaid files",
  "main": "generate-workflow.js",
  "type": "module",
  "scripts": {
    "generate": "node generate-workflow.js",
    "generate:png": "node generate-workflow.js --png-only",
    "generate:svg": "node generate-workflow.js --svg-only",
    "generate:gif": "node generate-workflow.js --gif-only",
    "clean": "rm -rf output/*.png output/*.svg output/*.gif output/*.mp4 output/*.zip"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "archiver": "^7.0.1",
    "puppeteer": "^23.11.1"
  },
  "devDependencies": {},
  "keywords": [
    "mermaid",
    "workflow",
    "diagram",
    "animation",
    "gif",
    "svg"
  ],
  "author": "",
  "license": "MIT"
}
