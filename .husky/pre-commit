#!/bin/sh

# Markdown validation pre-commit hook
echo "ğŸ” Running markdown validation..."

# Get list of staged markdown files
STAGED_MD_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.md$')

if [ -n "$STAGED_MD_FILES" ]; then
  echo "ğŸ“ Validating $(echo "$STAGED_MD_FILES" | wc -l | tr -d ' ') markdown file(s)..."
  
  # Run markdownlint-cli2 on staged files only
  echo "$STAGED_MD_FILES" | xargs markdownlint-cli2
  
  if [ $? -ne 0 ]; then
    echo ""
    echo "âŒ Markdown validation failed!"
    echo "Run 'npm run lint:md:fix' to auto-fix issues, or fix manually."
    exit 1
  fi
  
  echo "âœ… All markdown files passed validation"
else
  echo "â„¹ï¸  No markdown files to validate"
fi

# Core artifact structure validation (01, 02, 04, 06)
echo ""
echo "ğŸ” Running core artifact structure validation..."

# Check if any core artifacts are staged (Wave 2 validated in CI only)
STAGED_CORE=$(echo "$STAGED_MD_FILES" | grep -E '(01-requirements|02-architecture-assessment|04-implementation-plan|04-governance-constraints|06-deployment-summary)\.md$' || true)

if [ -n "$STAGED_CORE" ]; then
  echo "ğŸ“‹ Validating core artifact structure..."
  # Use per-artifact strictness (no override) - standard for core, relaxed for Wave 2
  npm run lint:artifact-templates
  
  if [ $? -ne 0 ]; then
    echo ""
    echo "âŒ Core artifact validation failed!"
    echo "Ensure artifact structure matches templates in .github/templates/"
    exit 1
  fi
  
  echo "âœ… Core artifacts passed structure validation"
else
  echo "â„¹ï¸  No core artifacts to validate"
fi
